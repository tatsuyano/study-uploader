<style>
.thumbnail img {
    max-height: 90px;
}
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>画像一覧</h2>
        </div>

        <div class="col-md-12" style="margin-bottom:20px;">
            <%= link_to 'New Product', new_product_path %>
        </div>

        <% @products.each do |product| %>
            <div class="col-md-2 sample">
                <a href="<%= edit_product_path(product) %>" class="thumbnail">
                    <img src="<%= product.image.thumb %>">
                </a>
            </div>
        <% end %>
    </div>
</div>
