<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>画像</h2>
        </div>
        <div class="col-md-12" style="margin-bottom:20px;">
            <% if @product.image? %>
                <%= image_tag @product.image.thumb.url %>
            <% else %>
                <%= image_tag 'noimage.gif' %>
            <% end %>
        </div>

        <div class="col-md-12" style="margin-bottom:20px;">
            <%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Back', products_path %>
        </div>
    </div>
</div>
